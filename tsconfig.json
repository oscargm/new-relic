{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "noLib": false,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@api": ["src/api"],
      "@model": ["src/model"],
      "@mock": ["src/mock"],
      "@types": ["src/types"],
      "@utils": ["src/utils"]
    },
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": ["node_modules"]
}
